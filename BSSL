### src/App.jsx
```jsx
import { useState } from 'react'

export default function App() {
  const [mobileOpen, setMobileOpen] = useState(false)
  const [status, setStatus] = useState(null)

  async function submitForm(e) {
    e.preventDefault()
    const form = new FormData(e.currentTarget)
    const payload = Object.fromEntries(form.entries())
    setStatus('Sending…')
    try {
      const res = await fetch('/api/contact', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload)
      })
      const data = await res.json()
      setStatus(data.ok ? 'Thanks! We\'ll be in touch shortly.' : 'Something went wrong.')
      if (data.ok) e.currentTarget.reset()
    } catch (err) {
      setStatus('Network error — try again?')
    }
  }

  return (
    <div className="min-h-screen bg-neutral-50 text-neutral-900">
      {/* SEO + JSON-LD */}
      <script type="application/ld+json" dangerouslySetInnerHTML={{__html: JSON.stringify({
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        name: "Bischer Safe & Secure Locksmith (BSSL)",
        url: "https://bssl.info",
        telephone: "+1-555-555-5555",
        address: {
          "@type": "PostalAddress",
          addressRegion: "CA",
          addressCountry: "US"
        },
        description: "SCIF & secure facility solutions: install, replace, and repair STC / RF-STC doors and GSA vault doors.",
        areaServed: "United States"
      }) }} />

      <header className="sticky top-0 z-40 backdrop-blur bg-white/80 border-b border-neutral-200">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="h-16 flex items-center justify-between">
            <div className="flex items-center gap-3">
              <div className="h-9 w-9 rounded-xl bg-neutral-900 text-white grid place-content-center font-black">B</div>
              <div className="leading-tight">
                <div className="font-semibold tracking-tight">Bischer Safe & Secure Locksmith</div>
                <div className="text-xs text-neutral-500">SCIF • STC/RF-STC • Vault Doors</div>
              </div>
            </div>

            <nav className="hidden md:flex items-center gap-8 text-sm">
              <a href="#services" className="hover:text-neutral-600">Services</a>
              <a href="#certs" className="hover:text-neutral-600">Certifications</a>
              <a href="#projects" className="hover:text-neutral-600">Projects</a>
              <a href="#about" className="hover:text-neutral-600">About</a>
              <a href="#contact" className="inline-flex items-center gap-2 px-3 py-1.5 rounded-xl border border-neutral-300 hover:bg-neutral-100">Contact</a>
            </nav>

            <button aria-label="Open menu" className="md:hidden inline-flex items-center justify-center h-10 w-10 rounded-xl border border-neutral-300" onClick={() => setMobileOpen(v => !v)}>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
            </button>
          </div>
        </div>
        {mobileOpen && (
          <div className="md:hidden border-t border-neutral-200 bg-white">
            <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3 grid gap-2 text-sm">
              <a href="#services" className="py-2" onClick={() => setMobileOpen(false)}>Services</a>
              <a href="#certs" className="py-2" onClick={() => setMobileOpen(false)}>Certifications</a>
              <a href="#projects" className="py-2" onClick={() => setMobileOpen(false)}>Projects</a>
              <a href="#about" className="py-2" onClick={() => setMobileOpen(false)}>About</a>
              <a href="#contact" className="py-2" onClick={() => setMobileOpen(false)}>Contact</a>
            </div>
          </div>
        )}
      </header>

      {/* Hero */}
      <section className="relative overflow-hidden">
        <div className="absolute inset-0 -z-10 bg-[radial-gradient(1200px_400px_at_50%_-100px,rgba(0,0,0,0.08),transparent)]" />
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
          <div className="grid md:grid-cols-2 gap-10 items-center">
            <div>
              <h1 className="text-3xl md:text-5xl font-black tracking-tight leading-tight">SCIF & Secure Facility Door Solutions</h1>
              <p className="mt-5 text-neutral-700 md:text-lg">Install, replace, and repair <span className="font-semibold">STC/RF‑STC</span> doors and <span className="font-semibold">GSA‑approved vault doors</span>. DoD‑experienced. Rapid site surveys. Compliant paperwork.</p>
              <div className="mt-8 flex flex-wrap gap-3">
